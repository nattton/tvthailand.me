{{ define "content" }}
<div class="col-sm-12 col-sm-offset-1 col-md-10 col-md-offset-1 main">
  <h1 class="page-header">{{ .header }}</h1>
  {{ if .channel.URL }}
  <div class="row">
      <div class="col-sm-12 col-sm-offset-1 col-md-10 col-md-offset-1">
      <div style="left: 0px; visibility: visible; top: 0px; position: relative;" class="large-player video-player-container">
        <div class="video-player-root">
          <div class="col-sm-12 col-sm-offset-1 col-md-10 col-md-offset-1">
            <h2 style="color:#000;">Live TV</h4>
            <link rel="stylesheet" href="//releases.flowplayer.org/6.0.3/skin/functional.css">
            <script src="//releases.flowplayer.org/6.0.3/flowplayer.min.js"></script>

            <div class="player">
               <video>
                  <source type="application/x-mpegurl"  src="{{ .channel.URL }}">
               </video>
            </div>
            <script>
            $(function () {
               $(".player").flowplayer({
                 autoplay: true,
                 embed: false
               });
            });
            </script>

          </div>
        </div>
      </div>
      </div>
  </div>
  {{ end }}
  <div class="row">
  <div class="pull-right">
      <div class="fb-like" data-share="true" data-width="100" data-show-faces="true"></div>
  </div>
  </div>
  <div class="row placeholders">
  {{ range .shows }}
    <div class="col-xs-12 col-sm-3 placeholder">
      <div class="thumbnail">
      <a href="/show/{{ .ID }}/{{ .Title }}">
      <img src="{{ .Thumbnail }}" class="img-responsive" alt="{{ .Title }}" />
      </a>
      <div class="caption"><h4>{{ .Title }}</h4></div>
      </div>
    </div>
  {{ end }}
  </div>
  <div id="show_content" class="row placeholders"></div>
  <script type="text/babel">
  var ShowList = React.createClass({
    render : function() {
      return (
        <div className="col-xs-12 col-sm-3 placeholder">
          <div className="thumbnail">
          <a href="/show/{this.props.show.ID}/{this.props.show.Title}">
          <img src="{this.props.show.Thumbnail}" className="img-responsive" />
          </a>
          <div className="caption"><h4>{this.props.show.Title}</h4></div>
          </div>
        </div>
      );
    }
  });

  var HelloWorld = React.createClass({
    render: function() {
      return (
        <p>
          Hello, <input type="text" placeholder="Your name here" />!
          It is {this.props.date.toTimeString()}
        </p>
      );
    }
  });
  ReactDOM.render(
    <HelloWorld date={new Date()} />,
    document.getElementById('show_content')
  );
  </script>

{{ if .episodes}}
  <h1 class="page-header">EPISODES</h1>
  {{ template "episode_item" . }}
{{ end }}

<div class="table-responsive">
</div>
</div>
<script src="/static/js/show_list.js"></script>
{{ end }}
