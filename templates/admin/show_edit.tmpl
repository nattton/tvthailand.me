{{ define "content" }}
<div class="col-sm-12 col-sm-offset-1 col-md-10 col-md-offset-1 main">
  <h1 class="page-header">Show {{ .show.ID }} : {{ .show.Title }}</h1>
  <form>
    <div class="form-group">
      <label for="InputTitle">Title</label>
      <input type="text" value="{{ .show.Title }}" class="form-control" id="InputTitle" placeholder="Title" />
    </div>
    <div class="form-group">
      <label for="InputDescription">Description</label>
      <input type="text" value="{{ .show.Description }}" class="form-control" id="InputDescription" placeholder="Description" />
    </div>
    <div class="form-group">
      <label for="InputThumbnail">Thumbnail</label>
      <input type="text" value="{{ .show.Thumbnail }}" class="form-control" id="InputThumbnail" placeholder="Thumbnail" />
    </div>
    <div class="form-group">
      <label for="InputThumbnail">Poster</label>
      <input type="text" value="{{ .show.Poster }}" class="form-control" id="InputPoster" placeholder="Poster" />
    </div>
    <div class="form-group">
      <label for="InputDetail">Detail</label>
      <textarea rows="5" class="form-control" id="InputDetail" placeholder="Detail">{{ .show.Detail }}</textarea>
    </div>
    <div class="form-group">
      <label for="InputUpdateDate">Update Date</label>
      <div class="input-group">
        <input type="text" value="{{ .show.UpdateDate }}" class="form-control" id="InputUpdateDate" placeholder="Update Date">
        <span class="input-group-btn">
                <button class="btn btn-default" type="submit">Current Date</button>
         </span>
      </div>
    </div>
    <div class="form-group">
      <label for="InputOtvID">Otv ID</label>
      <input type="text" value="{{ .show.OtvID }}" class="form-control" id="InputOtvID" placeholder="Otv ID" />
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> Is Otv
      </label>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> Active
      </label>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> Online
      </label>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> iOS
      </label>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> Android
      </label>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> Windows Phone
      </label>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> S40
      </label>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> Thailand Only
      </label>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> V3
      </label>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
  </table>
</div>
{{ end }}

{{ define "script" }}
{{ end }}
