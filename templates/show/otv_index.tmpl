{{ define "content" }}
<div class="col-sm-12 col-sm-offset-1 col-md-10 col-md-offset-1 main">
  <h1 class="page-header">{{ .show.Title }}</h1>
  <ul class="pager">
    {{ if .pageInfo.PreviousPage }}
      <li><a href="/show/{{ .show.ID }}/{{ urlEsc .show.Title }}?page={{ .pageInfo.PreviousPage }}">Previous</a></li>
    {{ end }}
    {{ if .pageInfo.NextPage }}
      <li><a href="/show/{{ .show.ID }}/{{ urlEsc .show.Title }}?page={{ .pageInfo.NextPage }}">Next</a></li>
    {{ end }}
  </ul>
  <div class="row placeholders">
  {{ range $index, $episode := .episodes.EpisodeList }}
    <div class="col-xs-12 col-sm-3 placeholder">
      <div class="thumbnail">
      <a href="/watch_otv/{{ $episode.EpisodeID }}/0/{{ urlEsc $.show.Title $episode.Date }}" >
      <img src="{{ $episode.Thumbnail }}" class="img-responsive" alt="{{ $episode.NameTh }}">
      </a>
      <div class="caption"><h4>{{ $episode.NameTh }} {{ $episode.Date }}</h4></div>
      </div>
    </div>
  {{ end }}
  </div>
  <div class="table-responsive">
  </div>
  <ul class="pager">
    {{ if .pageInfo.PreviousPage }}
      <li><a href="/show/{{ .show.ID }}/{{ urlEsc .show.Title }}?page={{ .pageInfo.PreviousPage }}">Previous</a></li>
    {{ end }}
    {{ if .pageInfo.NextPage }}
      <li><a href="/show/{{ .show.ID }}/{{ urlEsc .show.Title }}?page={{ .pageInfo.NextPage }}">Next</a></li>
    {{ end }}
  </ul>
  <div class="row">
  <div class="pull-right">
      <div class="fb-like" data-share="true" data-width="100" data-show-faces="true"></div>
  </div>
  </div>
</div>
{{ end }}

{{ define "script" }}
{{ end }}
