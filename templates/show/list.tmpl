<div class="col-sm-12 col-sm-offset-1 col-md-10 col-md-offset-1 main" ng-controller="VideoCtrl" ng-init="apiPath = '{[{ .apiPath }]}';">
  <h1 class="page-header">{[{ .header }]}</h1>
  <div class="row">
  <div class="pull-right">
      <div class="fb-like" data-share="true" data-width="100" data-show-faces="true"></div>
  </div>
  </div>
  <div ng-hide="shows.length">
  <div class="row placeholders">
  {[{ range .shows }]}
    <div class="col-xs-12 col-sm-3 placeholder">
      <div class="thumbnail">
      <a href="/show/{[{ .ID }]}/{[{ urlEsc .Title }]}">
      <img src="{[{ .Thumbnail }]}" class="img-responsive" alt="{[{ .Title }]}" />
      </a>
      <div class="caption"><h4>{[{ .Title }]}</h4></div>
      </div>
    </div>
  {[{ end }]}
  </div>
  </div>
  <div ng-show="shows.length">
  <div infinite-scroll="nextPage()" infinite-scroll-disabled='busy' infinite-scroll-distance="0">
    <div class="row placeholders">
      <div class="col-xs-12 col-sm-3 placeholder" ng-repeat="show in shows">
        <div class="thumbnail">
        <a href="/show/{{show.ID}}/{{show.Title|urlencode}}">
        <img src="{{show.Thumbnail}}" class="img-responsive" alt="{{show.Title}}" />
        </a>
        <div class="caption"><h4>{{show.Title}}</h4></div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="table-responsive">
</div>
</div>
<script src="/static/js/show_list.js"></script>
