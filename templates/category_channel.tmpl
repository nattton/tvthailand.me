<div class="col-sm-12 col-sm-offset-1 col-md-10 col-md-offset-1 main">
  <h1 class="page-header">{[{ .header }]}</h1>
  <div class="row placeholders">
  {[{ range .shows }]}
    <div class="col-xs-12 col-sm-3 placeholder">
      <div class="thumbnail">
      <a href="/show/{[{ .ID }]}/{[{ .Title }]}">
      <img src="{[{ .Thumbnail }]}" class="img-responsive" alt="{[{ .Title }]}">
      </a>
      <div class="caption"><h4>{[{ .Title }]}</h4></div>
      </div>
    </div>
  {[{ end }]}
  </div>
  {[{ if .showPopulars }]}
  <h1 class="page-header">Popular</h1>
  {[{ end }]}
  <div class="row placeholders">
  {[{ range .populars }]}
    <div class="col-xs-12 col-sm-3 placeholder">
      <div class="thumbnail">
      <a href="/show/{[{ .ID }]}/{[{ .Title }]}">
      <img src="{[{ .Thumbnail }]}" class="img-responsive" alt="{[{ .Title }]}">
      </a>
      <div class="caption"><h4>{[{ .Title }]}</h4></div>
      </div>
    </div>
    <div class="clearfix visible-xs-block"></div>
  {[{ end }]}
  </div>
<div class="table-responsive">
</div>
  <div class="row">
  <div class="pull-right">
      <div class="fb-like" data-share="true" data-width="100" data-show-faces="true"></div>
  </div>
  </div>
</div>
